@model JobsWeb.Models.DemoModel

@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form", name = "thisform" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="text-center">
        <h1 class="display-4">Better Background Tasks</h1>
        <p>As seen on <a href="https://github.com/thoughtpost/background-worker-functions" target="_blank">Github</a>.</p>
        <button type="submit" name="submit" value="sleep" class="btn btn-default">Queue New Sleep Job</button>
        <button type="submit" name="submit" value="longsleep" class="btn btn-default">Queue New LONG Sleep Job</button>
        <button type="submit" name="submit" value="import" class="btn btn-default">Queue New Import Job</button>
        <button type="submit" name="submit" value="images" class="btn btn-default">Queue New Image Search Job</button>
        <button type="submit" name="submit" value="interactive" class="btn btn-default">Queue Interactive Job</button>
        <button type="submit" name="submit" value="jobset" class="btn btn-default">Queue Job Set</button>
    </div>
}
<div>
    @await Component.InvokeAsync("RealTimeStatus", new
    {
        id = Model.Id,
        url = "/background"
    })
</div>

